version: 2.1
jobs:
  compile:
   docker:
      - image: ubuntu:20.04
   steps:
      - run:
          no_output_timeout: 50m
          command: |
           apt-get -y update && apt-get -y upgrade && DEBIAN_FRONTEND=noninteractive apt-get -y install bc build-essential bison flex zip gcc clang libc6 curl libstdc++6 git wget libssl-dev zstd openjdk-11-jdk openjdk-11-jre
           git clone https://github.com/PREDATOR-project/Predator-stable-X00T-WHYRED.git -b X00T-eas-oc --depth=1 kernel
           cd kernel
           git clone https://github.com/PREDATOR-project/myscripts.git -b master
           chmod +x myscripts/setup-test
           chmod +x myscripts/build-X00T-stable-oc.sh
           source ./myscripts/setup-test.sh
           ./myscripts/build-X00T-stable-oc.sh
workflows:
  version: 2.1
  cooking:
    jobs:
      - compile
